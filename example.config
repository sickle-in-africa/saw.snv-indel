params {

	test = 'hello'

	/* locations */
	projectDir 		= '/home/jackmo/computer/genemap/test-project/'
	containersDir 	= '/home/jackmo/computer/genemap/containers/'
	tempDir			= params.projectDir + 'temp/'

	/* Containers */
	fastqcImage 		= params.containersDir + 'fastqc:0.11.9--0'
	trimmomaticImage 	= params.containersDir + 'trimmomatic:0.39--1'
