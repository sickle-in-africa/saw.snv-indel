	sambambaImage		= params.containersDir + 'sambamba:0.7.1--h984e79f_3'
	bwaImage			= params.containersDir + 'bwa:0.7.8--hed695b0_5'

	/* workflow input */
	rawReadsDir 			= '/home/jackmo/computer/genemap/sequence-data/lambda_virus/reads/'
	referenceSequence 		= [
		'dir': '/home/jackmo/computer/genemap/sequence-data/lambda_virus/references/',
		'label': 'lambda_virus',
		'path': '/home/jackmo/computer/genemap/sequence-data/lambda_virus/references/lambda_virus.fa'
	] 
	outputDir 				= params.projectDir + 'output/'

	// resources
	threads = 8

	// trimmomatic
	trimLeadX 				= 0
	trimTrailX 				= 0
	trimMinAverageQuality 	= 1
	trimMinReadLength 		= 40
}

singularity {
	enabled = true
}
